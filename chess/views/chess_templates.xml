<openerp>
    <data>
        <template id="homepage" name="Homepage" inherit_id="website.layout">
            <xpath expr="//div[@id='wrapwrap']/main/" position="replace">
                    <div class="oe_structure">
                        <div class="container">
                            <h1>Chess Services</h1>
                            <div class='menu'>
                                <ul class="services">
				                    <li><a href="#?w=400" rel="popup1" class="poplight">Create game</a></li>
				                    <li><a href="#?w=400" rel="popup2" class="poplight">Play with a friend</a></li>
				                    <li><a href="#?w=400" rel="popup3" class="poplight">Play with a random player</a></li>
			                    </ul>
                            </div>
                            <div id="popup1" class="popup_block">
                                <h2>Create game</h2>
                                <div class="popup_content">
                                    <h3>Game type:</h3>
                                    <p>
                                        <input type="radio" name="game_type" value="1" id="standart">Standart</input>
                                    </p>
                                    <h3>Figure color:</h3>
                                    <p>
                                        <input type="radio" name="figure_color" value="white">White</input>
                                    </p>
                                    <input type="button" id="create_game" value="Create game" />
                                </div>
                            </div>
                            <div id="popup2" class="popup_block">
                                <h2>Play with a friend</h2>
                                <div class="popup_content">
                                    <h3>Users:</h3>

                                   <!-- <t t-foreach='users' t-as='user'>
                                        <t t-esc="user.name"/>
                                    </t>-->



                                    <select>
                                        <option>User 1</option>
                                        <option>User 2</option>
                                    </select>
                                    <h3>Game type:</h3>
                                    <p>
                                        <input type="radio" name="game_type" value="1">Standart</input>
                                    </p>
                                    <h3>Figure color:</h3>
                                    <p>
                                        <input type="radio" name="figure_color" value="white">White</input>
                                    </p>
                                    <input type="button" id="create_game_friend" value="Create game" />
                                </div>
                            </div>
                            <div id="popup3" class="popup_block">
                                <div class="popup_content">
		                            <h2>Play random game</h2>
		                            <h3>Please wait, search games...</h3>
		                        </div>
                            </div>
                        </div>
                    </div>
            </xpath>
            <xpath expr="//div[@id='footer']/div" position="replace">
            </xpath>
        </template>
        <template id="mystyle" name="My style" inherit_id="website.assets_frontend">
            <xpath expr="link[last()]" position="after">
                <link href="/chess/static/less/style.less" rel="stylesheet" type="text/less"/>
                <link href="/chess/static/less/winmodal.less" rel="stylesheet" type="text/less"/>
                <link href="/chess/static/less/chessboard.less" rel="stylesheet" type="text/less"/>
                <link href="/chess/static/less/sweet-alert.less" rel="stylesheet" type="text/less"/>
                <link href="/chess/static/less/common.less" rel="stylesheet" type="text/less"/>

            </xpath>
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/chess/static/js/dm-modal.js"></script>
                <script type="text/javascript" src="/chess/static/js/chess.js"></script>
                <script type="text/javascript" src="/chess/static/js/chessboard.js"></script>
                <script type="text/javascript" src="/chess/static/js/common.js"></script>
                <script type="text/javascript" src="/chess/static/js/sweet-alert.js"></script>

                <!--<script type="text/javascript" src="/chess/static/js/jquery-1.10.1.min.js"></script>
                <script type="text/javascript" src="/chess/static/js/json3.min.js"></script>-->
            </xpath>

        </template>

        <template name="Game page" id="website.game" page="True">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <div class="site_header">
                            <div class="side">
                                <div class="side_box padded">
                                    <div class="game_infos">
                                        <div class="header">
                                            <span class="setup">
                                                <p>CLASSICAL</p>
                                                <p>+ not rating</p>
                                            </span>
                                            <p>activ partia</p>
                                        </div>
                                    </div>
                                    <div class="players">
                                        <div class="player_color_icon_is_white">
                                            <span class="user_link">Alex</span>
                                        </div>
                                        <div class="player_color_icon_is_black">
                                            <span class="user_link">Olga</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="chat_menu">
                                <a class="message_container active">
                                    Window chat
                                    <input title="show chat" class="toggle_chat" type="checkbox" />
                                </a>
                            </div>
                            <div class="chat">
                                <div class="chat_panel">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>





    </data>
</openerp>