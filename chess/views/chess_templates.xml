<openerp>
    <data>
        <template name="Chess Page" id="chesspage" page="True">
            <t t-call="website.layout">
                    <div class="oe_structure">
                        <div class="container">
                            <h1>Chess Services</h1>
                            <div class="game list">
                                <p>Game list:</p>
                                <t t-foreach="games" t-as="game">
                                    <a t-attf-href="/chess/game/{{ game.id }}/">
                                        <t t-esc="game.id"/>
                                    </a>
                                </t>
                            </div>
                            <div class='menu'>
                                <ul class="services">
				                    <li><a href="#?w=400" rel="popup1" class="poplight">Create game</a></li>
				                    <li><a href="#?w=400" rel="popup2" class="poplight">Play with a friend</a></li>
				                    <li><a href="#?w=400" rel="popup3" class="poplight">Play with a random player</a></li>
			                    </ul>
                            </div>
                            <div id="popup1" class="popup_block">
                                <h2>Create game</h2>
                                <form>
                                    <div class="popup_content">
                                        <h3>Game type:</h3>
                                        <p>
                                            <input type="radio" name="game_type" value="standart" id="standart">Standart</input>
                                            <input type="radio" name="game_type" value="blitz" id="blitz">Blitz</input>
                                            <input type="radio" name="game_type" value="limited time" id="limited time">Limited time</input>
                                        </p>
                                        <h3>Figure color:</h3>
                                        <p>
                                            <input type="radio" name="figure_color" value="white">White</input>
                                            <input type="radio" name="figure_color" value="black">Black</input>
                                        </p>
                                        <input type="button" id="create_game" value="Create game">
                                            <!--<a t-attf-href="/chess/game/{{ currency.name }}/">
                                            </a>-->
                                        </input>
                                    </div>
                                </form>
                            </div>
                            <div id="popup2" class="popup_block">
                                <h2>Play with a friend</h2>
                                <div class="popup_content">
                                    <h3>Users:</h3>
                                    <form>
                                        <select>
                                            <option>...</option>
                                            <t t-foreach="users" t-as="user">
                                                <option><t t-esc="user.name"/></option>
                                            </t>
                                        </select>
                                        <h3>Game type:</h3>
                                         <p>
                                            <input type="radio" name="game_type" value="1" id="standart">Standart</input>
                                            <input type="radio" name="game_type" value="1" id="blitz">Blitz</input>
                                            <input type="radio" name="game_type" value="1" id="limited time">Limited time</input>
                                        </p>
                                        <h3>Figure color:</h3>
                                        <p>
                                            <input type="radio" name="figure_color" value="white">White</input>
                                            <input type="radio" name="figure_color" value="black">Black</input>
                                        </p>
                                        <input type="button" id="create_game_friend" value="Create game" />
                                    </form>
                                </div>
                            </div>
                            <div id="popup3" class="popup_block">
                                <div class="popup_content">
		                            <h2>Play random game</h2>
		                            <h3>Please wait, search games...</h3>
		                        </div>
                            </div>
                        </div>
                    </div>
            </t>
        </template>
        <template name="Game Page" id="gamepage" page="True">
            <t t-call="website.layout">
                <xpath expr="script[last()]" position="after">
                    <script type="text/javascript" src="/chess/static/js/chess.js"></script>
                    <script type="text/javascript" src="/chess/static/js/chessboard.js"></script>
                </xpath>

                <div class="conteiner">
                    <div class="content">
                        <div class='box'>
                            <div class="site_header">
                                <div class="side">
                                    <div class="side_box padded">
                                        <div class="game_infos">
                                            <div class="header">
                                                <span class="setup">
                                                    <p><t t-esc="games.game_type"/></p>
                                                    <p> + not rating </p>
                                                </span>
                                                <p>test partia</p>
                                            </div>
                                        </div>
                                        <div class="players">
                                            <div t-attf-class="player_color_icon_is_{{games.first_color_figure }}">
                                                <t t-esc="games.first_user_id.name"/>
                                            </div>
                                            <div t-attf-class="player_color_icon_is_{{games.second_color_figure }}">
                                                <t t-esc="games.second_user_id.name"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--chat-->
                                <div class="chat_menu">
                                    <div class="messages_container">
                                        Window chat
                                        <input title="show chat" id="toggle_chat" type="checkbox" checked="checked" onclick="func_hide_chat()"/>

                                    </div>
                                </div>
                                <div class="chat" id="chat">
                                    <div class="window_chat"></div>
                                    <div class="chat_line"></div>
                                    <div class="message_chat">
                                        <textarea name="message_text" id="message_text" cols="18" rows="3"></textarea>
                                    </div>
                                    <div class="button_chat">
                                        <button type="button" id="message_btn">Send</button>
                                    </div>

                                </div>
                            </div>
                            <!--chess board-->
                            <div class="chess_board">
                                <div class="chess_game">
                                    <div class="eliminated_pieces">
                                        <div class="figure_white" id="figure_white"></div>
                                        <div class="figure_black" id="figure_black"></div>
                                    </div>
                                    <div id="board"></div>
                                </div>
                            </div>
                            <!--chess status, FEN, PGN etc-->
                            <div class="chess_information">
                                <div class="chess_time_usr2">
                                    Time: <span id="chess_time"></span>
                                </div>
                                <div class="chess_ground">
                                    <p class="status">Status: <span id="status"></span></p>
                                    <div class="pgn">
                                        <p>PGN: <span id="pgn"></span></p>
                                    </div>
                                    <div class="end_game">
                                        <a id="surrender" data-title="Surrender" href="#"></a>
                                        <a id="suggest_a_draw" data-title="Suggest a draw" href="#"></a>
                                        <!--<input type="button" id="moveBtn" value="e2-e4" />-->
                                    </div>
                                    <div class="canceled_game">
                                        <a href="#" id="cancel_game" data-title="Cancel the game">Cancel</a>
                                        <div class="canceled">Canceled</div>
                                    </div>
                                    <a id="toggler" href="#">Setting</a>
                                    <div id="box">
                                        <div class="user_button">
                                            <input type="button" id="flipOrientationBtn" value="Flip orientation" />
                                        </div>
                                        <div class="fen">
                                            <span id="fen"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="chess_time_usr1">
                                    Time: <span id="chess_time"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="mystyle" name="My style" inherit_id="website.assets_frontend">
             <xpath expr="link[last()]" position="after">
                 <link href="/chess/static/less/winmodal.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/chessboard.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/sweet-alert.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/style.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/common.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/simple-chat.less" rel="stylesheet" type="text/less"/>
             </xpath>
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/chess/static/js/dm-modal.js"></script>
                <script type="text/javascript" src="/chess/static/js/common.js"></script>
                <script type="text/javascript" src="/chess/static/js/sweet-alert.js"></script>
            </xpath>
        </template>
    </data>
</openerp>