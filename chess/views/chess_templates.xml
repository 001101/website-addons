<openerp>
    <data>

        <template name="Chess Page" id="chesspage" page="True">
            <t t-call="website.layout">
                    <div class="oe_structure">
                        <div class="container">
                            <h1>Chess Services</h1>
                            <div class='menu'>
                                <ul class="services">
				                    <li><a href="#?w=400" rel="popup1" class="poplight">Create game</a></li>
				                    <li><a href="#?w=400" rel="popup2" class="poplight">Play with a friend</a></li>
				                    <li><a href="#?w=400" rel="popup3" class="poplight">Play with a random player</a></li>
			                    </ul>
                            </div>
                            <div id="popup1" class="popup_block">
                                <h2>Create game</h2>
                                <div class="popup_content">
                                    <h3>Game type:</h3>
                                    <p>
                                        <input type="radio" name="game_type" value="1" id="standart">Standart</input>
                                    </p>
                                    <h3>Figure color:</h3>
                                    <p>
                                        <input type="radio" name="figure_color" value="white">White</input>
                                    </p>
                                    <input type="button" id="create_game" value="Create game" />
                                </div>
                            </div>
                            <div id="popup2" class="popup_block">
                                <h2>Play with a friend</h2>
                                <div class="popup_content">
                                    <h3>Users:</h3>
                                    <select>
                                        <option>User 1</option>
                                        <option>User 2</option>
                                    </select>
                                    <h3>Game type:</h3>
                                    <p>
                                        <input type="radio" name="game_type" value="1">Standart</input>
                                    </p>
                                    <h3>Figure color:</h3>
                                    <p>
                                        <input type="radio" name="figure_color" value="white">White</input>
                                    </p>
                                    <input type="button" id="create_game_friend" value="Create game" />
                                </div>
                            </div>
                            <div id="popup3" class="popup_block">
                                <div class="popup_content">
		                            <h2>Play random game</h2>
		                            <h3>Please wait, search games...</h3>
		                        </div>
                            </div>
                        </div>
                    </div>
            </t>
        </template>

        <template name="Game Page" id="gamepage" page="True">
            <t t-call="website.layout">
                <div class="oe_structure">
                    <div class="container">
                        <h1>game game game</h1>
                    </div>
                </div>
            </t>
        </template>

        <template id="mystyle" name="My style" inherit_id="website.assets_frontend">
             <xpath expr="link[last()]" position="after">
                 <link href="/chess/static/less/winmodal.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/chessboard.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/sweet-alert.less" rel="stylesheet" type="text/less"/>
                 <link href="/chess/static/less/style.less" rel="stylesheet" type="text/less"/>
             </xpath>
            <xpath expr="script[last()]" position="after">
                <script type="text/javascript" src="/chess/static/js/dm-modal.js"></script>
                <script type="text/javascript" src="/chess/static/js/common.js"></script>
                <script type="text/javascript" src="/chess/static/js/sweet-alert.js"></script>
            </xpath>
        </template>
    </data>
</openerp>