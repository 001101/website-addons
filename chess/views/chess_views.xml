<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="action_chess_game" model="ir.actions.act_window">
      <field name="name">Chess</field>
      <field name="res_model">chess.game</field>
    </record>

    <record id="chess_game_form" model="ir.ui.view">
      <field name="name">Chess game: form</field>
      <field name="model">chess.game</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <label for="game_type"/> <field name="game_type"/>
            <label for="time_game"/> <field name="time_game"/>
            <label for="date_start"/> <field name="date_start"/>
            <label for="first_user_id"/> <field name="first_user_id"/>
            <label for="first_color_figure"/> <field name="first_color_figure"/>
            <label for="second_user_id"/> <field name="second_user_id"/>
            <label for="second_color_figure"/> <field name="second_color_figure"/>
            <field name="move_game_ids">
              <tree string="Move game list" editable="bottom">
                <field name="move_game"/>
              </tree>
            </field>
            <field name ="message_game_ids">
              <tree string="Message game list" editable="bottom">
                <field name="message"/>
                <field name="date_message"/>
              </tree>
            </field>
            <label for="date_finish"/> <field name="date_finish"/>
            <label for="game_win"/> <field name="game_win"/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_chess_game_line" model="ir.actions.act_window">
      <field name="name">Chess game line</field>
      <field name="res_model">chess.game.line</field>
    </record>

    <record id="action_chess_chat" model="ir.actions.act_window">
      <field name="name">Chess chat</field>
      <field name="res_model">chess.game.chat</field>
    </record>

    <record id="chess_game_line_search" model="ir.ui.view">
      <field name="name">Chess game line: search</field>
      <field name="model">chess.game.line</field>
      <field name="arch" type="xml">
        <search>
          <field name="game_id"/>
          <field name="move_game"/>
        </search>
      </field>
    </record>

    <record id="chess_chat_search" model="ir.ui.view">
      <field name="name">Chess chat: search</field>
      <field name="model">chess.game.chat</field>
      <field name="arch" type="xml">
        <search>
          <field name="game_id"/>
          <field name="message"/>
          <field name="date_message"/>
        </search>
      </field>
    </record>

    <menuitem sequence="0" id="menu_chess" name="Chess"/>
    <menuitem id="menu_chess_content" parent="menu_chess"
            name="Game"/>
    <menuitem id="menu_chess_content_game"
            parent="menu_chess_content"
            action="action_chess_game"/>
  </data>
</openerp>